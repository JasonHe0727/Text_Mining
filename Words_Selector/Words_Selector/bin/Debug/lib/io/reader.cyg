reader_functions = CSharpDll("CygniLibraries.dll","CygniLibraries.IO.reader")

class reader{

	def __INIT__(stream,encoding){
		this.self_reader = reader_functions.reader_init(stream,encoding)
	}

	def peek(){
		reader_functions.reader_peek(this.self_reader)
	}
	def read(){
		reader_functions.reader_read(this.self_reader)
	}
	def readLine(){
		reader_functions.reader_readline(this.self_reader)
	}
	def close(){
		reader_functions.reader_close(this.self_reader)
	}

}
